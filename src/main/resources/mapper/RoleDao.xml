<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lc.auth.center.mapper.RoleDao">

    <resultMap id="BaseResultMap" type="com.lc.auth.center.model.RoleDO">
        <!--@Table -->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleDesc" column="role_desc" jdbcType="VARCHAR"/>
        <result property="dtCreated" column="dt_created" jdbcType="TIMESTAMP"/>
        <result property="dtModified" column="dt_modified" jdbcType="TIMESTAMP"/>
    </resultMap>
    
    <sql id="Base_Column_List">
          id, role_desc, dt_created, dt_modified    </sql>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap" >
        select
          id, role_desc, dt_created, dt_modified        from auth-center.role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, role_desc, dt_created, dt_modified
        from auth-center.role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleDesc != null and roleDesc != ''">
                and role_desc = #{roleDesc}
            </if>
            <if test="dtCreated != null">
                and dt_created = #{dtCreated}
            </if>
            <if test="dtModified != null">
                and dt_modified = #{dtModified}
            </if>
        </where>
    </select>

    <select id="queryUserRoleSet" resultMap="BaseResultMap" resultType="list">
        SELECT u.id, u.login_name, u.pwd,
               u_ref_ro.role_id,
               ro.role_desc
        FROM `user` u
                 LEFT JOIN user_ref_role u_ref_ro ON u.id = u_ref_ro.user_id
                 LEFT JOIN role ro ON u_ref_ro.role_id = ro.id
        WHERE u.id = #{id,jdbcType=BIGINT}
    </select>
</mapper>

